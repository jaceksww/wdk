	<%= form_tag( ws_addrejestrfishery_path,id:'addregisterfishery', :authenticity_token => true, remote:true, method: "post", multipart: true, class: "login-form") do %>
		<div class="form-body">
	        <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                Enter any username and password. </span>
            </div>
            <%= hidden_field_tag(:addRejestrFishery, "1") %>
            
			
			
          	<div class="form-group form-md-line-input">
					<div class="portlet-title">
							<div class="caption font-green-haze">
								<i class="icon-settings font-green-haze"></i>
								<span class="caption-subject bold uppercase"> Opis</span>
							</div>
					</div>
					
					
					<div class="form-group form-md-line-input"><input type="text" class="form-control" name="description2" id="addregisterfishery_description2">
										<label for="form_control_1">Nazwa łowiska</label>
										<span class="help-block">Wpisz nazwę łowiska np "Jezioro czerwone"...</span>
					</div>			
									
					<div class="form-group form-md-line-input">
										<textarea class="form-control" name="excerpt" id="addregisterfishery_excerpt" rows="3"></textarea>
										<label for="form_control_1">Opis łowiska...</label>
										<span class="help-block">Więcej na temat łowiska: gdzie, jakie ryby, jakie duże itp...</span>
					</div>
				
			</div>
			
			<div class="form-group">
			    &nbsp;<span class="btn green btn-lg fileinput-button">
								<i class="fa fa-plus"></i>
								<span>
								Wybierz zdjęcie... </span>
								<input type="file" name="image" id="addregisterfishery_image">
								</span>
			  
			</div>
			
			
             <%= submit_tag("Potwierdź", class:"btn btn-success uppercase") %>
			<div id="response"></div>
		</div>
	<% end %>
	<script>
	  jQuery(function($) {
		//https://github.com/rails/jquery-ujs/wiki/ajax
		$("#addregisterfishery")
		.bind("ajax:send", function(){
			$("#response").html('ładuję...');
			})
		  .bind("ajax:complete", function(xhr, data, status){
			$("#response").html('wczytuję...');
		  })
		  .bind("ajax:success", function(xhr, data, status) {
			$("#response").html('wczytane...');
				$("#addimage_register_fisheries").append('<option value="'+data.id+'">'+data.name+'</option>');
				setTimeout(function(){
				$("#addRejestrLowiskoModal").modal('hide');
				},1000)
			});
	  });									
	</script>
    