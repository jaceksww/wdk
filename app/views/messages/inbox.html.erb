									</li>
								</ul>
							</div>
						-->
						</th>
						<th class="pagination-control" colspan="4">
							<!--
							<span class="pagination-info">
							1-30 of 789 </span>
							<a class="btn btn-sm blue">
							<i class="fa fa-angle-left"></i>
							</a>
							<a class="btn btn-sm blue">
							<i class="fa fa-angle-right"></i>
							</a>
							-->
						</th>
					</tr>
					</thead>
					<tbody>
					<% @inbox_messages.each do |el| %>
					<% if !el['count_unread'] && !el['count_total'] %>
					<% #render ('layouts/avatar'), avatar: el['avatar'], additionalclass: 'img-circle' %>
						<tr class="<% if el['unread']%>unread<% end %>" data-messageid="<%= el['messageid'] %> ">
							<td class="inbox-small-cells">
								<input type="checkbox" class="mail-checkbox">
							</td>
							<td class="inbox-small-cells">
								<i class="fa fa-star"></i>
							</td>
							<td class="view-message hidden-xs">
								 <%= el['displayname'] %> 
							</td>
							<td class="view-message ">
								 <a href="/messages/view/<%= el['messageid'] %>">[ <%= sanitize el['subject'] %> ] <%= sanitize el['message'][0,30] %></a> 
							</td>
							<td class="view-message inbox-small-cells">
								<!--<i class="fa fa-paperclip"></i>-->
							</td>
							<td class="view-message text-right">
								 <%= el['datecreated']['date'][0,16] %>
							</td>
							<td class="view-message text-right">
								 <a href="/messages/delete/<%= el['messageid']%>/<%= el['touserid']%>" onclick="return confirm('Usunąć element?')">
									<span class="todo-tasklist-badge badge badge-roundless">Usuń</span>
								</a>
							</td>
						</tr>
					<% end %>
					<% end %>
					</tbody>
					</table>
					
					</div>
				</div>
			</div>
